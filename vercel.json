{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/",
        "buildCommand": "npm run build:client"
      }
    },
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build:server"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "server/index.ts"
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}
